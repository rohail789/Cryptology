<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    [link] meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@ViewBag.Title - Cryptology</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <link href="~/Content/css/CustomStyle.css" rel="stylesheet" />
</head>
<body>
    <div style="width: 100%;height: 10px;"></div>
    <div class="navbar navbar-inverse navbar-fixed-top" >
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Cryptology", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Exchanges", "Index", "Exchnges")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Register", "Create", "Users")</li>
                        <li>@Html.ActionLink("Log In", "logIn", "AuthUser")</li>
                    }
                    else
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Admin Page","Admin","Admin")</li>

                        }
                        if (User.IsInRole("Admin"))
                        {
                            <li><a href="#">Admin @User.Identity.Name</a></li>

                        }
                        else
                        {
                            <li><a href="#">Hello @User.Identity.Name</a></li>
                        }
                        <li>@Html.ActionLink("Log Out", "logOut", "AuthUser")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="navbar navbar-fixed-bottom" style="position: fixed; bottom: 0px; width: 100%; height: 60px; background-color: black;">
            <p class="text-center text-success">&copy; @DateTime.Now.Year - Cryptology</p>
            <p class="text-center text-success">Design And Develope by <b>Rohail khan</b></p>

        </footer>
    </div>

</body>
</html>


